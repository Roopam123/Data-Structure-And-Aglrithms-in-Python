   "source": [
    "def change(s,a,b):\n",
    "    # Base Case\n",
    "    if len(s)==0:\n",
    "        return s\n",
    "    # Function call \n",
    "    funCall = change(s[1:],a,b)\n",
    "    if s[0]==a:\n",
    "        return b+ funCall\n",
    "    else:\n",
    "        return s[0] + funCall"
   ]
