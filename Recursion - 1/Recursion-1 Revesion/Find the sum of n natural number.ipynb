   "source": [
    "Find the sum of n natural number"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "id": "12dfeca1",
   "metadata": {},
   "outputs": [],
   "source": [
    "def sum_of_natural(n):\n",
    "    if n==0:\n",
    "        return 0\n",
    "    return n + sum_of_natural(n-1)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "id": "bc92a97e",
   "metadata": {},
